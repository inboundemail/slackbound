{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "SLACK_SIGNING_SECRET",
    "SLACK_BOT_TOKEN",
    "INBOUND_API_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "INBOUND_SLACK_CHANNEL_ID",
    "DATABASE_URL",
    "PUBLIC_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".nitro/**", ".output/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
